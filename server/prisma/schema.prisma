generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────
// User & Auth
// ─────────────────────────────────────────────

model User {
  id             String    @id @default(uuid())
  stellarAddress String    @unique
  name           String?
  role           Role      @default(USER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  loans          Loan[]    @relation("BorrowerLoans")
  lentLoans      Loan[]    @relation("LenderLoans")
  wallets        Wallet[]
  challenges     WalletChallenge[]
  boughtEscrows  Escrow[]  @relation("BuyerEscrows")
  soldEscrows    Escrow[]  @relation("SellerEscrows")
  investments    Investment[]

  sessions           Session[]
  borrowedLoans      Loan[]              @relation("BorrowerLoans")
  governanceProposals GovernanceProposal[] @relation("ProposerProposals")
}

model Wallet {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  address    String    @unique
  isPrimary  Boolean   @default(false)
  label      String?
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([userId])
}

model WalletChallenge {
  id            String           @id @default(uuid())
  userId        String?
  user          User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  walletAddress String
  nonce         String
  purpose       ChallengePurpose
  expiresAt     DateTime
  usedAt        DateTime?
  createdAt     DateTime         @default(now())

  @@unique([walletAddress, nonce, purpose])
  @@index([walletAddress, purpose])
  @@index([userId, purpose])
}

model Session {
  id        String    @id @default(uuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  jti       String    @unique   // JWT ID — used to revoke specific tokens
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
}

